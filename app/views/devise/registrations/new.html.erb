<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= label(:user, :email) %>
  <%= label(:user, :name) %>
  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(Mínimo de <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
  </div>

  <%# Nuevos datos agregados a Devise %>
  <div class="field">
    <p>¿Qué tipo de cuenta quieres crear?</p>
    <%= f.radio_button(:media, false, class: "") %>
    <%= label_tag(:media_false, "Soy un periodista", class: "") %><br>
    <%= f.radio_button(:media, true, class: "") %>
    <%= label_tag(:media_true, "Quiero hacer una cuenta para un medio", class: "") %>
  </div>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :country %><br />
    <%= f.text_field :country, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :startdate %><br />
    <%= f.date_select :startdate, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :nationality %><br />
    <%= f.text_field :nationality, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :currentjob %><br />
    <%= f.text_area :currentjob, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Inscripción", class: "btn btn-block btn-outline-success my-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
